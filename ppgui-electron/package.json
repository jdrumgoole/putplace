{
  "name": "ppgui-electron",
  "productName": "PutPlace Client",
  "version": "1.0.0",
  "description": "PutPlace GUI - Desktop client for file metadata management",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && shx mkdir -p dist/renderer/assets && shx cp src/renderer/*.html dist/renderer/ && shx cp src/renderer/*.css dist/renderer/",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "package": "npm run build && electron-builder"
  },
  "keywords": [
    "putplace",
    "file",
    "metadata",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "shx": "^0.3.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.13.1"
  },
  "build": {
    "appId": "com.putplace.client",
    "productName": "PutPlace Client",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    },
    "directories": {
      "output": "release"
    },
    "publish": null
  }
}
