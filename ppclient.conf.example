# PutPlace Client Configuration File
# Copy this file to ~/ppclient.conf or ppclient.conf and customize as needed
# IMPORTANT: Set proper permissions: chmod 600 ~/ppclient.conf (to protect API key)

[DEFAULT]
# =============================================================================
# API Configuration
# =============================================================================

# API endpoint URL for the PutPlace server
# Default: http://localhost:8000/put_file
url = http://localhost:8000/put_file

# API Key for authentication (REQUIRED)
# Get your API key from the server administrator or create one with:
#   python -m putplace.scripts.create_api_key --name "my-client-key"
# IMPORTANT: Keep this secret! Set file permissions to 600
api-key = your-api-key-here

# =============================================================================
# Host Configuration
# =============================================================================

# Override hostname (optional, auto-detected if not specified)
# hostname = myserver

# Override IP address (optional, auto-detected if not specified)
# ip = 192.168.1.100

# =============================================================================
# Exclude Patterns
# =============================================================================

# Patterns to exclude from scanning (can be specified multiple times)
# Supports wildcards like *.log or directory names like .git
exclude = .git
exclude = __pycache__
exclude = *.pyc
exclude = *.log
exclude = node_modules
exclude = .DS_Store

# =============================================================================
# Options
# =============================================================================

# Dry run mode - scan files but don't send to server (true/false)
# dry-run = false

# Verbose output (true/false)
# verbose = false

# =============================================================================
# Security Notes
# =============================================================================
#
# 1. Set restrictive file permissions to protect your API key:
#    chmod 600 ~/ppclient.conf
#
# 2. Never commit this file to version control
#    Add ppclient.conf to .gitignore if in project directory
#
# 3. Use different API keys for different environments (dev/staging/prod)
#
# 4. Configuration priority (highest to lowest):
#    - Command line arguments (--api-key YOUR_KEY)
#    - Environment variables (export PUTPLACE_API_KEY=YOUR_KEY)
#    - Config file (this file)
#
